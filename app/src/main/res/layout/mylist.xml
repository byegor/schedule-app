<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
            android:id="@+id/game_starts"
            android:layout_width="match_parent"
            android:layout_height="25dip"
            android:text="@string/schedule_title"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@android:color/white"
    />

    <RelativeLayout
            android:id="@+id/schedule_panel"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="1dp"
            android:visibility="visible">
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/home__team_info_panel"
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_marginLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
            <ImageView
                    android:id="@+id/home_team_logo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/vega_squadron"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_height="40dp"
                android:layout_width="fill_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/home__team_info_panel"
                android:layout_toLeftOf="@+id/away_team_info_panel">
            <TextView
                    android:id="@+id/score"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="3:2"
                    android:gravity="center"

            />
            <TextView
                    android:id="@+id/date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="10.06.2015"
                    android:gravity="center"
            />
            <TextView
                    android:id="@+id/time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="19:15 CET"
                    android:gravity="center"
            />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:id="@+id/away_team_info_panel"
                      android:layout_width="75dp"
                      android:layout_height="85dp"
                      android:layout_marginRight="12dp"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true">
            <ImageView android:id="@+id/away_team_logo"
                       android:layout_width="55dp"
                       android:layout_height="55dp"
                       android:scaleType="fitXY"
                       android:layout_gravity="center"
                       android:src="@drawable/natus_vincere"
            />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>